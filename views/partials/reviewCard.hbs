<div class="last-review">
  <div class="cover">
    <img src="{{book_id.coverPath}}">
  </div>
  <div class="review">
    <p>{{review}}</p>
    <div class="details">
      <div class="rating">
        <i class="fas fa-star"></i>
        {{rating}}
      </div>
      <div class="review-author">
        <a href="/livre/{{book_id.slug}}">
          <img alt="{{user_id.username}} avatar" src="{{user_id.avatarPath}}">
          <span>{{user_id.username}}</span>
        </a>
      </div>
    </div>
  </div>
</div>